        </FrameLayout>
        <ImageView
                android:layout_width="172dp"
                android:layout_height="269dp" app:srcCompat="@drawable/hangman0"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/frameLayout"
